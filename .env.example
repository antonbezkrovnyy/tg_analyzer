# GigaChat API Configuration
# Authorization Key (base64 encoded Client ID:Client Secret)
GIGACHAT_AUTH_KEY=your_authorization_key_here
# OAuth endpoint for getting access token
GIGACHAT_OAUTH_URL=https://ngw.devices.sberbank.ru:9443/api/v2/oauth
# API base URL
GIGACHAT_BASE_URL=https://gigachat.devices.sberbank.ru/api/v1
# Scope for personal access
GIGACHAT_SCOPE=GIGACHAT_API_PERS
# Model to use (GigaChat, GigaChat-Plus, GigaChat-Pro)
GIGACHAT_MODEL=GigaChat

# Data Paths
TG_FETCHER_DATA_PATH=../python-tg/data
OUTPUT_PATH=./output

# Redis Configuration (for event subscriptions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Analysis Settings
WINDOW_SIZE=30

# Worker ID (for multi-instance scaling)
WORKER_ID=analyzer-1

# Logging
LOG_LEVEL=INFO
ENVIRONMENT=development

# Observability Stack
LOKI_URL=http://localhost:3100
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091
